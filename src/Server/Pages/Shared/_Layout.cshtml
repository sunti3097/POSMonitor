@inject Microsoft.Extensions.Options.IOptions<POSMonitor.Server.Options.MonitoringOptions> MonitoringOptions
<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] — POS Monitor</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="app-shell">
        <aside class="sidebar">
            <div class="sidebar-top">
                <div class="brand">
                    <div class="brand-icon">
                        <svg viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <rect width="40" height="40" rx="11" fill="url(#sbgrad)"/>
                            <path d="M12 20C12 15.58 15.58 12 20 12C24.42 12 28 15.58 28 20C28 24.42 24.42 28 20 28" stroke="white" stroke-width="2.5" stroke-linecap="round"/>
                            <circle cx="20" cy="20" r="3" fill="white"/>
                            <defs><linearGradient id="sbgrad" x1="0" y1="0" x2="40" y2="40"><stop offset="0%" stop-color="#7c3aed"/><stop offset="100%" stop-color="#4f46e5"/></linearGradient></defs>
                        </svg>
                    </div>
                    <div>
                        <div class="brand-name">POS Monitor</div>
                        <div class="brand-sub">Insight & Health</div>
                    </div>
                </div>

                <nav class="sidebar-nav">
                    <p class="nav-section">เมนูหลัก</p>
                    <a class="nav-item @(ViewContext.RouteData.Values["page"]?.ToString() == "/Index" ? "active" : "")" asp-page="/Index">
                        <svg viewBox="0 0 20 20" fill="currentColor"><path d="M2 10.5a1.5 1.5 0 113 0v6a1.5 1.5 0 01-3 0v-6zM6 10.333v5.43a2 2 0 001.106 1.79l.05.025A4 4 0 008.943 18h5.416a2 2 0 001.962-1.608l1.2-6A2 2 0 0015.56 8H12V4a2 2 0 00-2-2 1 1 0 00-1 1v.667a4 4 0 01-.8 2.4L6.8 7.933a4 4 0 00-.8 2.4z"/></svg>
                        <span>Dashboard</span>
                    </a>
                    <a class="nav-item" href="#">
                        <svg viewBox="0 0 20 20" fill="currentColor"><path d="M7 3a1 1 0 000 2h6a1 1 0 100-2H7zM4 7a1 1 0 011-1h10a1 1 0 110 2H5a1 1 0 01-1-1zM2 11a2 2 0 012-2h12a2 2 0 012 2v4a2 2 0 01-2 2H4a2 2 0 01-2-2v-4z"/></svg>
                        <span>กลุ่มอุปกรณ์</span>
                    </a>
                    <a class="nav-item" href="#">
                        <svg viewBox="0 0 20 20" fill="currentColor"><path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zM10 18a3 3 0 01-3-3h6a3 3 0 01-3 3z"/></svg>
                        <span>แจ้งเตือน</span>
                        <span class="nav-badge">Soon</span>
                    </a>
                </nav>
            </div>

            <div class="sidebar-bottom">
                <div class="sidebar-divider"></div>
                <div class="user-info">
                    <div class="user-avatar">@(User.Identity?.Name?.Substring(0,1).ToUpper() ?? "U")</div>
                    <div class="user-detail">
                        <div class="user-name">@(User.Identity?.Name?.Split('@')[0] ?? "User")</div>
                        <div class="user-role">Administrator</div>
                    </div>
                    <form method="post" asp-page="/Account/Logout" class="logout-form">
                        <button type="submit" class="btn-logout" title="ออกจากระบบ">
                            <svg viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M3 4.25A2.25 2.25 0 015.25 2h5.5A2.25 2.25 0 0113 4.25v2a.75.75 0 01-1.5 0v-2a.75.75 0 00-.75-.75h-5.5a.75.75 0 00-.75.75v11.5c0 .414.336.75.75.75h5.5a.75.75 0 00.75-.75v-2a.75.75 0 011.5 0v2A2.25 2.25 0 0110.75 18h-5.5A2.25 2.25 0 013 15.75V4.25z" clip-rule="evenodd"/><path fill-rule="evenodd" d="M19 10a.75.75 0 00-.75-.75H8.704l1.048-.943a.75.75 0 10-1.004-1.114l-2.5 2.25a.75.75 0 000 1.114l2.5 2.25a.75.75 0 101.004-1.114l-1.048-.943h9.546A.75.75 0 0019 10z" clip-rule="evenodd"/></svg>
                        </button>
                    </form>
                </div>
            </div>
        </aside>

        <main class="main-content">
            <header class="topbar">
                <div class="topbar-left">
                    <h1 class="page-title">@ViewData["Title"]</h1>
                </div>
                <div class="topbar-right">
                    <div class="topbar-chip">
                        <svg viewBox="0 0 16 16" fill="currentColor"><circle cx="8" cy="8" r="3" /><circle cx="8" cy="8" r="7" fill="none" stroke="currentColor" stroke-width="1.5"/></svg>
                        <span>Offline หลัง @MonitoringOptions.Value.OfflineThresholdMinutes นาที</span>
                    </div>
                    <div class="topbar-time" id="topbarClock"></div>
                </div>
            </header>
            <div class="page-body">
                @RenderBody()
            </div>
        </main>
    </div>

    <script>
        (function(){
            function pad(n){return n<10?'0'+n:n;}
            function tick(){
                var d=new Date();
                var el=document.getElementById('topbarClock');
                if(el) el.textContent=pad(d.getHours())+':'+pad(d.getMinutes())+':'+pad(d.getSeconds());
            }
            tick(); setInterval(tick,1000);
        })();
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
