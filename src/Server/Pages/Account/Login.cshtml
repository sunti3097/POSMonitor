@page
@model POSMonitor.Server.Pages.Account.LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Log In";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] — POS Monitor</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body class="login-body">
    <div class="login-bg">
        <div class="login-bg-grid"></div>
        <div class="login-bg-glow"></div>
    </div>

    <div class="login-wrap">
        <div class="login-card">
            <div class="login-brand">
                <div class="login-logo">
                    <svg viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect width="40" height="40" rx="12" fill="url(#grad1)"/>
                        <path d="M12 20C12 15.58 15.58 12 20 12C24.42 12 28 15.58 28 20C28 24.42 24.42 28 20 28" stroke="white" stroke-width="2.5" stroke-linecap="round"/>
                        <circle cx="20" cy="20" r="3" fill="white"/>
                        <path d="M20 12V8M20 32V28" stroke="white" stroke-width="2" stroke-linecap="round" opacity="0.5"/>
                        <defs>
                            <linearGradient id="grad1" x1="0" y1="0" x2="40" y2="40">
                                <stop offset="0%" stop-color="#7c3aed"/>
                                <stop offset="100%" stop-color="#4f46e5"/>
                            </linearGradient>
                        </defs>
                    </svg>
                </div>
                <div>
                    <div class="login-brand-name">POS Monitor</div>
                    <div class="login-brand-sub">Insight & Health Platform</div>
                </div>
            </div>

            <h1 class="login-title">Welcome Back</h1>
            <p class="login-desc">Please sign in to your authorized account</p>

            @if (!ModelState.IsValid)
            {
                <div class="alert-error">
                    <svg viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd"/></svg>
                    @foreach (var err in ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <span>@err.ErrorMessage</span>
                    }
                </div>
            }

            <form method="post" class="login-form">
                <input type="hidden" asp-for="ReturnUrl" />
                <div class="form-group">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <div class="input-wrap">
                        <svg class="input-icon" viewBox="0 0 20 20" fill="currentColor"><path d="M3 4a2 2 0 00-2 2v1.161l8.441 4.221a1.25 1.25 0 001.118 0L19 7.162V6a2 2 0 00-2-2H3z"/><path d="M19 8.839l-7.77 3.885a2.75 2.75 0 01-2.46 0L1 8.839V14a2 2 0 002 2h14a2 2 0 002-2V8.839z"/></svg>
                        <input asp-for="Input.Email" class="form-input" placeholder="admin@posmonitor.local" autocomplete="email" />
                    </div>
                    <span asp-validation-for="Input.Email" class="form-error"></span>
                </div>

                <div class="form-group">
                    <div class="form-label-row">
                        <label asp-for="Input.Password" class="form-label">Password</label>
                    </div>
                    <div class="input-wrap">
                        <svg class="input-icon" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 1a4.5 4.5 0 00-4.5 4.5V9H5a2 2 0 00-2 2v6a2 2 0 002 2h10a2 2 0 002-2v-6a2 2 0 00-2-2h-.5V5.5A4.5 4.5 0 0010 1zm3 8V5.5a3 3 0 10-6 0V9h6z" clip-rule="evenodd"/></svg>
                        <input asp-for="Input.Password" class="form-input" placeholder="••••••••••" autocomplete="current-password" id="passwordInput" />
                        <button type="button" class="toggle-pw" onclick="togglePassword()">
                            <svg id="eyeIcon" viewBox="0 0 20 20" fill="currentColor"><path d="M10 12.5a2.5 2.5 0 100-5 2.5 2.5 0 000 5z"/><path fill-rule="evenodd" d="M.664 10.59a1.651 1.651 0 010-1.186A10.004 10.004 0 0110 3c4.257 0 7.893 2.66 9.336 6.41.147.381.146.804 0 1.186A10.004 10.004 0 0110 17c-4.257 0-7.893-2.66-9.336-6.41zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/></svg>
                        </button>
                    </div>
                    <span asp-validation-for="Input.Password" class="form-error"></span>
                </div>

                <div class="form-check-row">
                    <label class="form-check">
                        <input asp-for="Input.RememberMe" type="checkbox" />
                        <span>Keep me signed in for 8 hours</span>
                    </label>
                </div>

                <button type="submit" class="btn-login">
                    <span>Sign In</span>
                    <svg viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" clip-rule="evenodd"/></svg>
                </button>
            </form>

            <div class="login-footer">
                <div class="policy-tags">
                    <span>Uppercase</span>
                    <span>Lowercase</span>
                    <span>Numbers</span>
                    <span>Special Characters</span>
                    <span>Minimum 10 characters</span>
                </div>
                <p class="policy-note">The system will automatically lock your account after 5 incorrect password attempts (15 minutes).</p>
            </div>
        </div>
    </div>

    <script>
        function togglePassword() {
            const input = document.getElementById('passwordInput');
            input.type = input.type === 'password' ? 'text' : 'password';
        }
    </script>
</body>
</html>
