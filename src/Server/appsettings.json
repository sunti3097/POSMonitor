{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "Default": "Server=localhost;Database=POSMonitor;User Id=posmonitor;Password=ChangeMe123!;TrustServerCertificate=True;"
  },
  "Monitoring": {
    "OfflineThresholdMinutes": 15,
    "HeartbeatRetentionDays": 14,
    "PollingIntervalSeconds": 30
  },
  "Notifications": {
    "Email": {
      "Enabled": true,
      "From": "pos-monitor@example.com",
      "To": "it-ops@example.com"
    },
    "Teams": {
      "Enabled": true,
      "WebhookUrl": "https://example.com/teams-webhook"
    }
  },
  "AgentAuthentication": {
    "HeaderName": "X-Agent-Key",
    "ApiKey": "ChangeMe-Agent-Key"
  },
  "AllowedHosts": "*"
}
