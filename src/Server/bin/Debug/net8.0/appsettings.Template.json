{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "Default": "Server=<SQL_SERVER>;Database=POSMonitor;User Id=<DB_USER>;Password=<DB_PASSWORD>;TrustServerCertificate=True;"
  },
  "Monitoring": {
    "OfflineThresholdMinutes": 15,
    "HeartbeatRetentionDays": 14,
    "PollingIntervalSeconds": 30
  },
  "Notifications": {
    "Email": {
      "Enabled": true,
      "Host": "smtp.office365.com",
      "Port": 587,
      "UseSsl": true,
      "From": "pos-monitor@example.com",
      "To": "it-ops@example.com"
    },
    "Teams": {
      "Enabled": true,
      "WebhookUrl": "https://outlook.office.com/webhook/<token>"
    }
  },
  "AgentAuthentication": {
    "HeaderName": "X-Agent-Key",
    "ApiKey": "<REPLACE_WITH_STRONG_KEY>"
  },
  "AllowedHosts": "*"
}
