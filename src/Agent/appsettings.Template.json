        "ExecutablePath": "C:\\Program Files\\Geniuz\\GeniuzSync.exe"
      },
      {
        "ProcessName": "window_genuiz",
        "DisplayName": "Geniuz POS UI",
        "AutoRestart": true,
        "ExecutablePath": "C:\\Program Files\\Geniuz\\window_genuiz.exe"
      }
    ],
    "PingTargets": [
      "8.8.8.8",
      "pos-gateway.local"
    ]
