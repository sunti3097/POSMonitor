{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Agent": {
    "DeviceId": "00000000-0000-0000-0000-000000000000",
    "ApiBaseUrl": "https://pos-monitor.example.com/",
    "ApiKey": "<MATCH_SERVER_AGENT_KEY>",
    "SqlExpressConnectionString": "Server=.\\SQLEXPRESS;Database=POSMonitorBuffer;Trusted_Connection=True;TrustServerCertificate=True;",
